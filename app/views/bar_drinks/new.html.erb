<%= form_with url: "/bars/#{@bar.id}/drinks", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :drink_rating %>
  <%= f.number_field :drink_rating, in: 0..5 %><br>

  <%= f.label :contains_alcohol, 'Contains alcohol?:' %><br>
  <%= f.label true %>
  <%= f.radio_button :contains_alcohol, "true" %><br>
  <%= f.label :false %>
  <%= f.radio_button :contains_alcohol, "false" %><br>

  <%= f.submit 'Create Drink' %><br>
<% end %>
