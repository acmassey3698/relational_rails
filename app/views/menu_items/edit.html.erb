<%= form_with url:"/menu_items/#{@menu_item.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @menu_item.name%><br>

   <%= f.label :calories%>
   <%= f.number_field :calories, value: @menu_item.calories %><br>

  <%= f.label :vegetarian, 'Vegetarian?:' %><br>
  <%= f.label :true %>
  <%= f.radio_button :vegetarian, "true" %><br>
  <%= f.label :false %>
  <%= f.radio_button :vegetarian, "false" %><br>

  <%= f.submit 'Update Menu Item' %>
<% end %>
