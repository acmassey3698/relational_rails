<%= form_with url: "/bars", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :tabs %>
  <%= f.number_field :tabs, min: 0 %><br>

  <%= f.label :has_food, 'Has food?:' %><br>
  <%= f.label true %>
  <%= f.radio_button :has_food, "true" %><br>
  <%= f.label :false %>
  <%= f.radio_button :has_food, "false" %><br>

  <%= f.submit  'Create Bar' %><br>

<% end %>
